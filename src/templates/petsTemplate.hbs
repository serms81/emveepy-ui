{{#each pets}}
  <div class="pet">
    <div class="photo-column">
      <div class="img-wrapper--circle">
        <img src="{{photo}}" zoomable="{{photo}}" onload="zoomImg(this)">
      </div>
    </div>

    <div class="info-column">
      <div class="h2">{{name}} <small class="species">{{species}}</small></div>

      <p>Age: {{birthYear}}</p>

      {{#if favFoods}}
      <h4 class="headline-bar">Favorite Foods</h4>
      <ul class="favorite-foods">
        {{#each favFoods}}
          <li>{{{this}}}</li>
        {{/each}}
      </ul>
      {{/if}}

    </div>
  </div>
{{/each}}
